{{page-title "Dummy"}}

<h2 id="title">Welcome to Ember</h2>

<PowerCalendar
  @center={{this.someDate}}
  @selected={{this.selected}}
  @onSelect={{action (mut this.selected) value="date"}}
  @onCenterChange={{action (mut this.someDate) value="date"}} as |calendar|
>
  <calendar.Nav />
  <calendar.Days />
</PowerCalendar>

<PowerCalendarRange
  @center={{this.someDate}}
  @selected={{this.selectedRange}}
  @minRange="1w"
  @onSelect={{action (mut this.selectedRange) value="moment"}}
  @onCenterChange={{action (mut this.someDate) value="moment"}} as |calendar|
>
  <calendar.Nav />
  <calendar.Days />
</PowerCalendarRange>

<PowerCalendarMultiple
  @center={{this.someDate}}
  @selected={{this.selectedMultiple}}
  @onSelect={{action (mut selectedMultiple) value="moment"}}
  @onCenterChange={{action (mut someDate) value="moment"}} as |calendar|
>
  <calendar.Nav />
  <calendar.Days />
</PowerCalendarMultiple>